<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.second.dao.YishangDao">
    <resultMap id="BaseResultMap" type="com.example.second.entity.Yishang">
        <id column="uid" property="uid" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="score" property="score" jdbcType="INTEGER"/>
        <result column="teacher" property="teacher" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
        uid, name, score, teacher
    </sql>

    <select id="findAllYishangs" resultType="com.example.second.entity.Yishang">
        select * from yishang
    </select>

    <select id="findYishangByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select * from yishang where name = #{name,jdbcType=VARCHAR}
    </select>

    <delete id="deleteYishangsByIds">
        delete from yishang where uid in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getCountYishangs" resultType="java.lang.Integer">
        select count(uid) as count from yishang
    </select>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from yishang
        where uid = #{uid,jdbcType=BIGINT}
    </select>
    <delete id="deleteYishangById" parameterType="java.lang.Long">
        delete from yishang
        where uid = #{uid,jdbcType=BIGINT}
    </delete>

    <insert id="insert" parameterType="com.example.second.entity.Yishang">
        insert into yishang (uid, name, score,
        teacher)
        values (#{uid,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{score,jdbcType=INTEGER},
        #{teacher,jdbcType=VARCHAR})
    </insert>
    <insert id="addYishang" parameterType="com.example.second.entity.Yishang">
        insert into yishang
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                uid,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="score != null">
                score,
            </if>
            <if test="teacher != null">
                teacher,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                #{uid,jdbcType=BIGINT},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="score != null">
                #{score,jdbcType=INTEGER},
            </if>
            <if test="teacher != null">
                #{teacher,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateYishang" parameterType="com.example.second.entity.Yishang">
        update yishang
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="score != null">
                score = #{score,jdbcType=INTEGER},
            </if>
            <if test="teacher != null">
                teacher = #{teacher,jdbcType=VARCHAR},
            </if>
        </set>
        where uid = #{uid,jdbcType=BIGINT}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.example.second.entity.Yishang">
        update yishang
        set name = #{name,jdbcType=VARCHAR},
        score = #{score,jdbcType=INTEGER},
        teacher = #{teacher,jdbcType=VARCHAR}
        where uid = #{uid,jdbcType=BIGINT}
    </update>
</mapper>